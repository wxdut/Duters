<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <com.chillax.softwareyard.customview.TopBar_
        android:layout_width="match_parent"
        android:id="@+id/topbar"
        android:layout_height="wrap_content">

    </com.chillax.softwareyard.customview.TopBar_>
    <ListView
        android:id="@+id/tuling_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:cacheColorHint="#000"
        android:focusable="false"
        android:clickable="false"
        android:divider="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@drawable/tuping_edit_gb">
        <EditText
            android:id="@+id/tuling_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:maxLength="60"
            />

        <TextView
            android:id="@+id/tuling_tv"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/tuling_send_bg"
            android:gravity="center"
            android:text="发送"
            android:textColor="@android:color/white"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>